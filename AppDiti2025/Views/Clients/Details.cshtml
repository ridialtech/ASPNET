@model AppDiti2025.Models.Client
@{
    ViewData["Title"] = "Client Details";
}
<h1>Client Details</h1>
<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Model.Nom</dd>
        <dt class="col-sm-2">Prenom</dt>
        <dd class="col-sm-10">@Model.Prenom</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Telephone</dt>
        <dd class="col-sm-10">@Model.Telephone</dd>
        <dt class="col-sm-2">Adresse</dt>
        <dd class="col-sm-10">@Model.Adresse</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
