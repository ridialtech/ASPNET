@model AppDiti2025.Models.Apprenant
@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cet apprenant ?</h3>
<div>
    <h4>@Model.Matricule - @Model.NomP @Model.PrenomP</h4>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdP" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
