@model AppDiti2025.Models.Parent
@{
    ViewData["Title"] = "Supprimer";
}

<h1>Supprimer</h1>
<h3>Êtes-vous sûr de vouloir supprimer ce parent ?</h3>
<div>
    <h4>ID @Model.IdPar - @Model.Statut</h4>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="IdPar" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
